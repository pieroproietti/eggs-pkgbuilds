# Contributor: Piero Proietti <piero.proietti@gmail.com>
# Maintainer: Piero Proietti <piero.proietti@gmail.com>
pkgname=penguins-eggs
pkgver=10.0.28
pkgrel=1
pkgdesc="A console tool that allows you to remaster your system and redistribute it as live images on USB sticks or via PXE"
url="https://penguins-eggs.net"
arch="x86_64 x86"
license="GPL-3.0-or-later"
depends="
	alpine-conf
	apk-tools
	bash-completion
	cryptsetup
	curl
	dosfstools
	git
	fuse
	lsblk
	lsb-release
	lvm2
	jq
	mkinitfs
	nodejs
	parted
	rsync
	syslinux
	squashfs-tools
	sshfs
	xorriso"
makedepends="
	pnpm
	"
subpackages="$pkgname-bash-completion $pkgname-doc"
source="https://github.com/pieroproietti/penguins-eggs/archive/$pkgver/penguins-eggs-$pkgver.tar.gz"
#source="$pkgname-$pkgver.tar.gz::https://github.com/pieroproietti/penguins-eggs.git#commit=$_commit"
install="$pkgname.post-install $pkgname.post-deinstall"


options="!check net" # No tests

build() {
	pnpm install
	pnpm build
}

pkgver() {
	grep 'version' package.json | awk 'NR==1 {print $2 }' | awk -F '"' '{print $2}'
}

package() {
	install -Dm644 .oclif.manifest.json package.json \
		-t "$pkgdir/usr/lib/$pkgname/"
	cp -r addons assets bin conf ipxe dist dracut mkinitcpio mkinitfs node_modules scripts \
		"$pkgdir/usr/lib/$pkgname/"

	# Fix permissions
	chown root:root "$pkgdir/usr/lib/$pkgname/dist"
	chown root:root "$pkgdir/usr/lib/$pkgname/node_modules"

	# Package contains reference to $srcdir
	find "$pkgdir/usr/lib/$pkgname" -name package.json -print0 | xargs -r -0 sed -i '/_where/d'

	local tmppackage="$(mktemp)"
	local pkgjson="$pkgdir/usr/lib/$pkgname/package.json"
	jq '.|=with_entries(select(.key|test("_.+")|not))' "$pkgjson" > "$tmppackage"
	mv "$tmppackage" "$pkgjson"
	chmod 644 "$pkgjson"

	# Fix paths for node modules
	find node_modules -type f \
			-exec sed -i "s#$srcdir/$pkgname-$pkgver/#/usr/lib/eggs/#" {} ';'

	# Install documentation
	install -Dm644 README.md -t "$pkgdir/usr/share/doc/$pkgname/"

	# Symlink executable
	install -d "$pkgdir"/usr/bin
	ln -s "/usr/lib/$pkgname/bin/run.js" "$pkgdir"/usr/bin/eggs

	# Install bash completion files
	install -d "$pkgdir"/usr/share/bash-completion/completions
	mv "$pkgdir/usr/lib/$pkgname/scripts/eggs.bash" \
		"$pkgdir"/usr/share/bash-completion/completions/

	# Install Zsh completion files
	install -d "$pkgdir"/usr/share/zsh/functions/Completion/Zsh/
	mv "$pkgdir/usr/lib/$pkgname/scripts/_eggs" \
		"$pkgdir"/usr/share/zsh/functions/Completion/Zsh/

	# Install man page
	install -Dm644 manpages/doc/man/eggs.1.gz -t "$pkgdir"/usr/share/man/man1/

	# Install desktop file
	install -Dm644 "assets/$pkgname.desktop" \
		-t "$pkgdir"/usr/share/applications/

	# Install icon
	install -Dm644 assets/eggs.png -t "$pkgdir"/usr/share/pixmaps/

	# link to adapt
	install -Dm755 "$pkgdir"/usr/lib/penguins-eggs/addons/eggs/adapt/bin/adapt \
		"$pkgdir"/usr/bin/adapt

	# link to love
	install -Dm755 "$pkgdir"/usr/lib/penguins-eggs/scripts/love \
		"$pkgdir"/usr/bin/love

	# revitalize mom
	if [ -f "/usr/lib/penguins-eggs/scripts/mom.sh" ]; then
		chmod +x /usr/lib/penguins-eggs/scripts/mom.sh
	fi

	# revitalize eui
	if [ -d "/usr/lib/penguins-eggs/eui" ]; then
		chmod +x /usr/lib/penguins-eggs/eui/eui-create-image.sh
		chmod +x /usr/lib/penguins-eggs/eui/eui-start.sh
		chmod 0400 /usr/lib/penguins-eggs/eui/eui-users
	fi

}

sha512sums="
f1613b1d4158d2b8762dc87ba774b0ca88d493975364b7223c3f2e65095bb56abab0589382ee150b77a68b829a03f0360f0fe2269a9e6369fdcaea7725cdc522  penguins-eggs-10.0.28.tar.gz
"
